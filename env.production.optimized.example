# Portal Sabercon - Configuração de Produção Otimizada
# Comunicação direta frontend-backend (sem proxy Next.js)

# Ambiente
NODE_ENV=production

# URLs da aplicação - Comunicação Direta
NEXT_PUBLIC_APP_URL=https://portal.sabercon.com.br
NEXT_PUBLIC_API_URL=https://portal.sabercon.com.br/api

# URLs internas (servidor/SSR)
INTERNAL_API_URL=https://portal.sabercon.com.br/api
BACKEND_URL=https://portal.sabercon.com.br/api

# Configurações de segurança
NEXT_PUBLIC_SECURE_COOKIES=true
NEXT_PUBLIC_SAME_SITE=strict

# Configurações de CORS
CORS_ORIGIN=https://portal.sabercon.com.br
ALLOWED_ORIGINS=https://portal.sabercon.com.br

# Configurações de cache otimizadas
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=1800

# Configurações de build
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true
TSC_COMPILE_ON_ERROR=true

# Configurações de proxy/comunicação
DISABLE_NEXTJS_PROXY=true
DIRECT_BACKEND_COMMUNICATION=true
TRUST_PROXY=true
BEHIND_PROXY=true

# Headers de segurança
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=false
HSTS_ENABLED=true

# Configurações de timeout otimizadas
API_TIMEOUT=25000
API_RETRY_ATTEMPTS=2
API_RETRY_DELAY=800

# Configurações específicas para Nginx
NGINX_PROXY_ONLY=true
FRONTEND_PORT=3000
BACKEND_PORT=3001

# Configurações de log
LOG_LEVEL=warn
DEBUG_API_CALLS=false 