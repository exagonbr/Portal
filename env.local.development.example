# Portal Sabercon - Desenvolvimento Local (Sem Nginx)
# Copie para .env.local para desenvolvimento

# Ambiente
NODE_ENV=development

# URLs locais - Comunicação Direta
NEXT_PUBLIC_APP_URL=https://portal.sabercon.com.br/api
NEXT_PUBLIC_API_URL=https://portal.sabercon.com.br/api

# URLs internas (mesmo valor para desenvolvimento local)
INTERNAL_API_URL=https://portal.sabercon.com.br/api
BACKEND_URL=https://portal.sabercon.com.br/api

# Configurações de desenvolvimento
NEXT_PUBLIC_SECURE_COOKIES=false
NEXT_PUBLIC_SAME_SITE=lax

# CORS permissivo para desenvolvimento
CORS_ORIGIN=https://portal.sabercon.com.br/api
ALLOWED_ORIGINS=https://portal.sabercon.com.br/api,https://portal.sabercon.com.br/api

# Cache desabilitado para desenvolvimento
NEXT_PUBLIC_CACHE_ENABLED=false
NEXT_PUBLIC_CACHE_TTL=0

# Configurações de build para desenvolvimento
GENERATE_SOURCEMAP=true
DISABLE_ESLINT_PLUGIN=false
TSC_COMPILE_ON_ERROR=false

# Proxy/comunicação
DISABLE_NEXTJS_PROXY=true
DIRECT_BACKEND_COMMUNICATION=true
NGINX_REQUIRED=false

# Timeouts menores para desenvolvimento
API_TIMEOUT=15000
API_RETRY_ATTEMPTS=1
API_RETRY_DELAY=500

# Debug habilitado
LOG_LEVEL=debug
DEBUG_API_CALLS=true
