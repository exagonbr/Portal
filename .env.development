# ===================================
# Portal Sabercon - Development Environment Variables
# ===================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
HOST=localhost

# URLs and API Configuration
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001/api
BACKEND_URL=http://localhost:3001/api
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001/api
BASE_URL=http://localhost:3001

# Next.js Configuration
NEXT_PUBLIC_NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3001
NEXT_TELEMETRY_DISABLED=1
TRUST_PROXY=false

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-secret-key

# CORS Configuration
CORS_ENABLED=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3001/api
ADMIN_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3001/api
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH,HEAD
CORS_CREDENTIALS=true
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,Access-Control-Request-Method,Access-Control-Request-Headers
CORS_MAX_AGE=86400

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portal_sabercon_dev
DB_USER=postgres
DB_PASSWORD=root
DB_SSL=false
DATABASE_URL=postgresql://postgres:root@localhost:5432/portal_sabercon_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# Session Configuration
SESSION_SECRET=your-development-session-secret
SESSION_DURATION=7d
SESSION_NAME=portal.sid
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# JWT Configuration
JWT_SECRET=development-jwt-secret-key
JWT_EXPIRATION=1d
REFRESH_TOKEN_EXPIRATION=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=portal-dev
JWT_AUDIENCE=portal-users

# Authentication
AUTH_PROVIDER=local
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
ALLOW_SIGNUP=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STORE=memory

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_TO_FILE=false
LOG_DIR=./logs

# Development Tools
DEBUG=true
DEBUG_PRINT_LIMIT=1000
PRETTY_PRINT=true
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# File Upload Configuration (if needed)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
