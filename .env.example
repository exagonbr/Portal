# Database URLs
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/your_database"
SHADOW_DATABASE_URL="postgresql://postgres:your_password@localhost:5432/shadow_db"

# MySQL Connection (Source Database)
MYSQL_HOST="localhost"
MYSQL_PORT="3306"
MYSQL_DATABASE="old_database"
MYSQL_USER="root"
MYSQL_PASSWORD="your_mysql_password"
MYSQL_URL="mysql://root:your_mysql_password@localhost:3306/old_database"

# PostgreSQL Connection (Target Database)
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="your_database"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_password"

# Application Settings
NODE_ENV="development"
PORT=3000
API_PORT=3001

# Authentication
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRATION="24h"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRATION="7d"

# External Services URLs
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
BACKEND_URL="http://localhost:3001/api"
FRONTEND_URL="http://localhost:3000"

# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="your-aws-region"
AWS_S3_BUCKET="your-s3-bucket-name"

# Email Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
EMAIL_FROM="noreply@yourdomain.com"

# Redis Configuration (if used)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Session Configuration
SESSION_SECRET="your-session-secret"
SESSION_EXPIRY="24h"

# OAuth Configuration (if used)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Security Settings
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX="100"

# Media Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10mb"
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="dev"

# Cache Settings
CACHE_TTL="3600"
CACHE_CHECK_PERIOD="120"

# Feature Flags
ENABLE_USER_REGISTRATION="true"
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_2FA="false"
ENABLE_SOCIAL_LOGIN="true"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
ANALYTICS_ID="your-analytics-id"

# SSL/TLS Configuration (if used)
SSL_KEY_PATH="./certificates/private.key"
SSL_CERT_PATH="./certificates/certificate.crt"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS="30"

# API Rate Limiting
API_RATE_LIMIT="100"
API_RATE_LIMIT_WINDOW="15m"

# Development Tools
DEBUG="true"
DEBUG_SQL="false"
PRISMA_DEBUG="*"
