# Configurações do Servidor
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Configurações do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portal_sabercon
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# Configurações de Autenticação JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configurações de Upload de Arquivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/epub+zip

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Configurações da Fila de Mensageria
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# Configurações de Notificações
NOTIFICATION_QUEUE_CONCURRENCY=5
EMAIL_QUEUE_CONCURRENCY=3
FILE_PROCESSING_QUEUE_CONCURRENCY=2

# Configurações de Cache
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=86400
CACHE_TTL_COURSE_DATA=7200

# Configurações de Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Configurações de Monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090

# Configurações de Desenvolvimento
DEBUG=portal:*
SWAGGER_ENABLED=true